{
    "description": "Descriptions api",
    "endpoints": [
      {
        "endpoint": "/",
        "description": "The Home endpoint",
        "return": "Hello from students API!",
        "method": "GET",
        "status code": 200
      },
      {
        "endpoint": "/api",
        "description": "The main endpoint",
        "return": "It returns this API documentation",
        "method": "GET",
        "status code": 200
      },
      {
        "endpoint": "/api/students",
        "description": "Get information about all students",
        "return": "list of all students",
        "method": "GET",
        "status code": 200
      },
      {
        "endpoint": "/api/students/get/<int:id>",
        "description": "Get student information by id",
        "return": "It returns student info",
        "method": "GET",
        "status code": {
          "200": "id found",
          "404": "did not find a student with this id"
        }
      },
      {
        "endpoint": "/api/students/add",
        "description": "The endpoint creates the new student",
        "method": "POST",
        "status code": 201,
        "parameters": {
          "required all": {
            "name": "String",
            "email": "String",
            "age": "Integer",
            "cellphone": "String"
          }
        }
      },
      {
        "endpoint": "/api/students/modify/<int:id",
        "description": "The endpoint updates student partially by ID",
        "method": "PATCH",
        "status code": {
          "201": "modified",
          "400": "no data provided",
          "404": "no found ID"
        },
        "parameters": {
          "no required all": {
            "name": "String",
            "email": "String",
            "age": "Integer",
            "cellphone": "String"
          }
        }
      },
      {
        "endpoint": "/api/students/change/<int:id>",
        "description": "The endpoint updates student by ID",
        "method": "PUT",
        "status code": {
          "201": "changed",
          "400": "no all data provided",
          "404": "no found ID"
        },
        "parameters": {
          "required all": {
            "name": "String",
            "email": "String",
            "age": "Integer",
            "cellphone": "String"
          }
        }
      },
      {
        "endpoint": "/api/students/delete/<int:id>",
        "description": "The endpoint deletes student by ID",
        "method": "DELETE",
        "status code": {
          "200": "if ID is existed",
          "404": "no found ID"
        }
      },
      {
        "endpoint": "/api/health-check/ok",
        "description": "The endpoint health-check - OK",
        "method": "GET",
        "status code": 200
      },
      {
        "endpoint": "/api/health-check/bad",
        "description": "The endpoint health-check - BAD",
        "method": "GET",
        "status code": 500
      }
    ]
  }